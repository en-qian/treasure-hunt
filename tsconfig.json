{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["ES2015", "ES2020.Promise"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "outDir": "./dist",
    "paths": {
      "@config": ["src/config"],
      "@config/*": ["src/config/*"],
      "@constants": ["src/constants"],
      "@controllers": ["src/controllers"],
      "@controllers/*": ["src/controllers/*"],
      "@middlewares": ["src/middlewares"],
      "@middlewares/*": ["src/middlewares/*"],
      "@models/*": ["src/models/*"],
      "@root/*": ["src/*"],
      "@routes": ["src/routes"],
      "@routes/*": ["src/routes/*"],
      "@utils": ["src/utils"],
      "@utils/*": ["src/utils/*"],
      "@web-api": ["src/web-api"],
      "@web-api/*": ["src/web-api/*"],
      "@webhook": ["src/webhook"]
    },
    "preserveWatchOutput": true,
    "rootDir": "./src",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "es2017"
  },
  "exclude": ["node_modules", "src/test"],
  "include": ["src"]
}
